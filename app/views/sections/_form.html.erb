<%= error_messages_for(f.object) %>
<table summary=" section form fields">
 			<tr>
 					<th>Name</th>
 					<td><%= f.text_field(:name) %></td>

 			</tr>
 			<tr>
 					<th>Page </th>
 					<td><%= f.select(:page_id, @pages.map {|s| [s.name, s.id]}) %></td>
 			</tr>
 			<tr>
 							<th>Position</th>
 							<td><%= f.select(:position, 1..@section_count) %></td>
 					
 					
 			</tr> 
 			<tr>
 							<th>Visible</th> 
 							<td><%= f.check_box(:visible) %></td>
 					
 			</tr> 
 				<tr>
 							<th>Content type</th>
 							<td>
 							<%= f.radio_button(:content_type, 'text') %> Text
 							<%= f.radio_button(:content_type, 'text') %> HTML	
 							</td>
 					
 			</tr>
 			<tr>
 							<th>Content </th>
 							<td><%= f.text_area(:content, :size => '40x10') %></td>
 					
 			</tr>

 	</table>